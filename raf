import PersonalForm from "@/components/form/PersonalForm";
import AcademicForm from "@/components/forms/AcademicForm";
import FamilyInfoForm from "@/components/forms/FamilyInfoForm";

const Index = ({ user }) => {
  const [role, setRole] = useState("");

  const [formData, setFormData] = useState({
    firstName: "",
    lastName: "",
    name: "",
    email: "",
    gender: "",
    cellPhone: "",
    birthDate: "",
    postalCode: "",
    city: "",
    street: "",
    examType: "",
    institutions: "",
    fieldOfStudy: "",
    qualificationDate: "",
    gpa: "",
    fatherFullName: "",
    fatherOccupation: "",
    fatherPhone: "",
    motherFullName: "",
    motherOccupation: "",
    motherPhone: "",
  });

  const [formErrors, setFormErrors] = useState({
    role: "",
    firstName: "",
  });
  const validateForm = () => {
    let isValid = true;
    const newFormErrors = {};

    // Validate Role
    if (!role) {
      newFormErrors.role = "Please select a role.";
      isValid = false;
    }

    // Validate First Name
    if (!formData.firstName) {
      newFormErrors.firstName = "Please enter a first name.";
      isValid = false;
    }

    setFormErrors(newFormErrors);
    return isValid;
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    console.log(formData.firstName);
    if (validateForm()) {
      console.log(formData);
      // Perform form submission
    }
  };

  const handleRoleChange = (e) => {
    setRole(e.target.value);
    validateForm();
  };

  const handleInputChange = (e) => {
    setFormData({
      ...formData,
      [e.target.name]: e.target.value,
    });
    validateForm();
    setFormErrors({ ...formErrors, firstName: "" });
  };

  return (
    <AdminLayout>
      <div className="min-h-full">
